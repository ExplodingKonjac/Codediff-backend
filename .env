# 基础配置
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
FLASK_ENV=development
FLASK_DEBUG=true

# 数据库
DATABASE_URL=sqlite:///app.db

# API 配置
VITE_API_URL=http://localhost:5000/api

# CORS 配置 (开发环境)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://127.0.0.1:5173,http://127.0.0.1:5174

# 沙箱配置
SANDBOX_EXECUTABLE=bwrap
RLIMIT_WRAPPER_EXECUTABLE=./tools/rlimit_wrapper
CHECKER_EXECUTABLE_PREFIX=./tools/checkers/
TESTLIB_PATH=./tools/testlib.h

PROG_TIME_LIMIT = 5
PROG_MEMORY_LIMIT = 256
PROG_OUTPUT_LIMIT = 16

COMPILER_TIME_LIMIT = 15
COMPILER_MEMORY_LIMIT = 512
COMPILER_OUTPUT_LIMIT = 16384

# 生产环境前端URL (部署时设置)
# FRONTEND_URL=https://your-production-domain.com